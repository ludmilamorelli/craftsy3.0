<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

    <body class="home">
        <%- include('./partials/header') %>
         <main>

                <section class="productos">
                    <h3 class="w-100"><%= title %> : <%= busqueda %>  </h3>

                    <% if (products.length > 0) { %>

                    <% products.forEach(product=> { %>
                        <article>
                            <img class="photo" src="/images/<%=product.images[0].file%>" alt="">
                            <img class="img-discount" src="/images/img-descuento.png" alt="">
                            <h4>
                                <%= product.name %>
                            </h4>
                            <p>
                                <%= product.description %>
                            </p>
                            <div class="d-flex justify-content-around flex-wrap">
                                <a class="btn btn-sm btn-primary" href="/products/detail/<%= product.id %>">ver
                                    más</a>
                                
                            </div>

                        </article>

                        <% }) %>

                        <% }else{ %>
                            <p>No hay resultados para tu búsqueda </p>
                        <% } %>

                 </section>
            </main>
            <%- include('./partials/footer') %>
            <%- include('./partials/scripts') %>
            <script src="/js/index.js"></script>

    </body>

</html>