<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
    <body class="register">
        <%- include('./partials/header') %>
            <main>
                <h1>REGISTRATE</h1>
                <form action="" method="POST">
                    <div class="box-form">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="name" id="nombre" placeholder="Ingresá tu nombre">
                        <small></small>
                    </div>
                    <div class="box-form">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" placeholder="Ingresá tu email">
                        <small class="text-danger"><%= locals.errores && errores.email ? errores.email.msg : null %> </small>
                    </div>
                    <div class="box-form">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password" placeholder="contraseña">
                        <small></small>
                    </div>
                    <div class="box-form">
                        <label for="password2">Confirmar contraseña</label>
                        <input type="password" name="password2" id="password2" placeholder="contraseña">
                        <small></small>
                    </div>
                    <input type="checkbox" name="terminos" id="terminos">
                    <label for="terminos">Acepto los términos y condiciones</label>
                    <div class="box-button">
                        <button type="submit">Registrarme</button>
                        <button type="reset">Cancelar</button>
                    </div>
                </form>
            </main>
            <%- include('./partials/footer') %> 
            <%- include('./partials/scripts') %>

    </body>

</html>